<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- FORM VIEW -->
        <record id="gym_exercise_view_form" model="ir.ui.view">
            <!-- Unique name for the view -->
            <field name="name">gym.exercise.view.form</field>
            <!-- Model the view is associated with -->
            <field name="model">gym.exercise</field>
            <!-- The actual XML architecture of the view -->
            <field name="arch" type="xml">
                <!-- Title of the form -->
                <form string="Exercise">
                    <sheet>
                        <!-- First level group for layout -->
                        <group>
                            <!-- Left column -->
                            <group>
                                <!-- Exercise name -->
                                <field name="name"/>
                                <!-- Many2one field to link to specialty -->
                                <field name="specialty_id"/>
                                <!-- Company field, visible only to multi-company users -->
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <!-- Right column -->
                            <group>
                                <!-- Difficulty selection field -->
                                <field name="difficulty"/>
                                <!-- Active checkbox to archive/unarchive -->
                                <field name="active"/>
                            </group>
                        </group>
                        <!-- Separator for better visual organization -->
                        <separator string="Detailed Description"/>
                        <!-- Text area for detailed exercise description -->
                        <field name="description" nolabel="1" widget="textarea" colspan="4"
                            placeholder="Detailed description of the exercise, steps, and execution tips..."/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE VIEW -->
        <record id="gym_exercise_view_tree" model="ir.ui.view">
            <!-- Unique name for the view -->
            <field name="name">gym.exercise.view.tree</field>
            <!-- The model that this view applies to -->
            <field name="model">gym.exercise</field>
            <!-- The actual XML architecture of the view -->
            <field name="arch" type="xml">
                <!-- Title of the tree/list -->
                <tree string="Exercises">
                    <!-- Exercise name -->
                    <field name="name"/>
                    <!-- Linked specialty -->
                    <field name="specialty_id"/>
                    <!-- Difficulty level -->
                    <field name="difficulty"/>
                    <!-- Company field, visible only to multi-company users -->
                    <field name="company_id" groups="base.group_multi_company"/>
                    <!-- Active checkbox to archive/unarchive -->
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- ACTION TO OPEN THE VIEW -->
        <record id="gym_exercise_action" model="ir.actions.act_window">
            <!-- Action name shown in the menu -->
            <field name="name">Exercises</field>
            <!-- Model to be opened by the action -->
            <field name="res_model">gym.exercise</field>
            <!-- View modes available: tree and form -->
            <field name="view_mode">tree,form</field>
            <!-- Help text displayed when there are no records -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new exercise and assign it to a specialty.
                </p>
            </field>
        </record>

    </data>
</odoo>