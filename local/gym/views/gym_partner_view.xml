<odoo>
    <data>

        <!-- ACTION: Instructors -->
        <record id="gym_instructor_action" model="ir.actions.act_window">
            <field name="name">Instructors</field>
            <field name="res_model">gym.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_instructor','=',True)]</field>
        </record>

        <!-- Tree view for instructors -->
        <record id="gym_instructor_tree_view" model="ir.ui.view">
            <field name="name">gym.instructor.tree</field>
            <field name="model">gym.partner</field>
            <field name="arch" type="xml">
                <tree string="Instructors">
                    <field name="name"/>
                    <field name="specialty_id"/>
                    <field name="hire_date"/>
                    <field name="salary_rate"/>
                </tree>
            </field>
        </record>

        <!-- Form view for instructors -->
        <record id="gym_instructor_form_view" model="ir.ui.view">
            <field name="name">gym.instructor.form</field>
            <field name="model">gym.partner</field>
            <field name="arch" type="xml">
                <form string="Instructor">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="specialty_id"/>
                            <field name="hire_date"/>
                            <field name="salary_rate"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION: Members -->
        <record id="gym_member_action" model="ir.actions.act_window">
            <field name="name">Members</field>
            <field name="res_model">gym.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_member','=',True)]</field>
        </record>

        <!-- Tree view for members -->
        <record id="gym_member_tree_view" model="ir.ui.view">
            <field name="name">gym.member.tree</field>
            <field name="model">gym.partner</field>
            <field name="arch" type="xml">
                <tree string="Members">
                    <field name="name"/>
                    <field name="level"/>
                    <field name="membership_start"/>
                    <field name="membership_end"/>
                    <field name="instructor_ids"/>
                </tree>
            </field>
        </record>

        <!-- Form view for members -->
        <record id="gym_member_form_view" model="ir.ui.view">
            <field name="name">gym.member.form</field>
            <field name="model">gym.partner</field>
            <field name="arch" type="xml">
                <form string="Member">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="level"/>
                            <field name="membership_start"/>
                            <field name="membership_end"/>
                            <field name="instructor_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
