<odoo>
    <data>
        <record id="gym_instructor_action" model="ir.actions.act_window">
            <field name="name">Instructors</field>
            <field name="res_model">gym.instructor</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'default_is_company': False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new instructor profile.
                </p>
            </field>
        </record>

        <record id="gym_instructor_view_kanban" model="ir.ui.view">
            <field name="name">gym.instructor.view.kanban</field>
            <field name="model">gym.instructor</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="color"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="specialty_ids"/>
                    <field name="hire_date"/>
                    <field name="salary_rate"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Instructor Image" t-att-src="kanban_image('gym.instructor', 'image_128', record.id)" class="oe_kanban_avatar"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="oe_partner_name"><field name="name"/></strong>
                                    <ul>
                                        <li t-if="record.email.raw_value"><field name="email"/></li>
                                        <li t-if="record.phone.raw_value"><field name="phone"/></li>
                                        <li t-if="record.specialty_ids.raw_value">Specialties: <field name="specialty_ids" widget="many2many_tags"/></li>
                                        <li>Hired: <field name="hire_date"/></li>
                                        <li>Rate: <field name="salary_rate" widget="monetary" options="{'currency_field': 'currency_id'}"/>/hr</li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <record id="gym_instructor_view_tree" model="ir.ui.view">
            <field name="name">gym.instructor.view.tree</field>
            <field name="model">gym.instructor</field>
            <field name="arch" type="xml">
                <tree string="Instructors">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="specialty_ids" widget="many2many_tags"/>
                    <field name="hire_date"/>
                    <field name="salary_rate"/>
                </tree>
            </field>
        </record>

        <record id="gym_instructor_view_form" model="ir.ui.view">
            <field name="name">gym.instructor.view.form</field>
            <field name="model">gym.instructor</field>
            <field name="arch" type="xml">
                <form string="Instructor">
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar" options='{"preview_image": "image_128"}'/>
                        <div class="oe_title">
                            <h1><field name="name" default_focus="1" placeholder="e.g. Maria Smith"/></h1>
                        </div>
                        <group>
                            <group string="Employment Details">
                                <field name="hire_date"/>
                                <field name="salary_rate" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="is_instructor" invisible="1"/>
                            </group>
                            <group string="Contact Info">
                                <field name="email"/>
                                <field name="phone"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="specialties" string="Specialties">
                                <field name="specialty_ids" widget="many2many_tags" placeholder="Select specialties taught by the instructor..."/>
                            </page>
                            <page name="address_info" string="Address">
                                <field name="street" placeholder="Street..."/>
                                <field name="street2"/>
                                <field name="city" placeholder="City"/>
                                <field name="state_id" placeholder="State"/>
                                <field name="zip" placeholder="ZIP"/>
                                <field name="country_id" placeholder="Country"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>