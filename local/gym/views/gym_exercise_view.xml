<odoo>
    <data>

        <!-- FORM VIEW -->
        <record id="gym_exercise_view_form" model="ir.ui.view">
            <!-- Form view for gym.exercise model -->
            <field name="name">gym.exercise.view.form</field>
            <field name="model">gym.exercise</field>
            <field name="arch" type="xml">
                <form string="Exercise">
                    <sheet>
                        <group>
                            <!-- First row of fields -->
                            <group>
                                <!-- Exercise name -->
                                <field name="name"/>
                                <!-- Related specialty (Many2one) -->
                                <field name="specialty_id"/>
                            </group>
                            <!-- Second row of fields -->
                            <group>
                                <!-- Difficulty level -->
                                <field name="difficulty"/>
                                <!-- Active flag -->
                                <field name="active"/>
                            </group>
                        </group>

                        <!-- Separator for descriptive section -->
                        <separator string="Detailed Description"/>
                        <!-- Text area for detailed description -->
                        <field name="description" nolabel="1" widget="textarea" colspan="4"
                            placeholder="Detailed description of the exercise, steps, and execution tips..."/>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE VIEW -->
        <record id="gym_exercise_view_tree" model="ir.ui.view">
            <!-- Tree view for gym.exercise model -->
            <field name="name">gym.exercise.view.tree</field>
            <field name="model">gym.exercise</field>
            <field name="arch" type="xml">
                <tree string="Exercises">
                    <!-- Exercise name -->
                    <field name="name"/>
                    <!-- Related specialty -->
                    <field name="specialty_id"/>
                    <!-- Difficulty level -->
                    <field name="difficulty"/>
                    <!-- Active flag, hidden in tree -->
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- ACTION TO OPEN THE VIEW -->
        <record id="gym_exercise_action" model="ir.actions.act_window">
            <!-- Window action for exercises -->
            <field name="name">Exercises</field>
            <field name="res_model">gym.exercise</field>
            <field name="view_mode">tree,form</field>
            <!-- Help text shown when no records exist -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new exercise and assign it to a specialty.
                </p>
            </field>
        </record>

    </data>
</odoo>
