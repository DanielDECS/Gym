<odoo>
    <data>
        <record id="gym_member_action" model="ir.actions.act_window">
            <field name="name">Members</field>
            <field name="res_model">gym.member</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'default_is_company': False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new gym member.
                </p>
            </field>
        </record>

        <record id="gym_member_view_kanban" model="ir.ui.view">
            <field name="name">gym.member.view.kanban</field>
            <field name="model">gym.member</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="color"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="membership_level"/>
                    <field name="membership_end"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Member Image" t-att-src="kanban_image('gym.member', 'image_128', record.id)" class="oe_kanban_avatar"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="oe_partner_name"><field name="name"/></strong>
                                    <ul>
                                        <li t-if="record.email.raw_value"><field name="email"/></li>
                                        <li t-if="record.phone.raw_value"><field name="phone"/></li>
                                        <li>Level: <field name="membership_level"/></li>
                                        <li>Expires: <field name="membership_end"/></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="gym_member_view_tree" model="ir.ui.view">
            <field name="name">gym.member.view.tree</field>
            <field name="model">gym.member</field>
            <field name="arch" type="xml">
                <tree string="Members">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="membership_level"/>
                    <field name="membership_start"/>
                    <field name="membership_end"/>
                </tree>
            </field>
        </record>
        
        <record id="gym_member_view_form" model="ir.ui.view">
            <field name="name">gym.member.view.form</field>
            <field name="model">gym.member</field>
            <field name="arch" type="xml">
                <form string="Member">
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar" options='{"preview_image": "image_128"}'/>
                        <div class="oe_title">
                            <h1><field name="name" default_focus="1" placeholder="e.g. John Doe"/></h1>
                        </div>
                        <group>
                            <group string="Membership Details">
                                <field name="membership_level"/>
                                <field name="membership_start"/>
                                <field name="membership_end"/>
                                <field name="is_member" invisible="1"/>
                            </group>
                            <group string="Contact Info">
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="street"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>